# Environment variables for Soil Health and Food Security project
# Copy this file to .env and fill in your actual values

# Data API Keys and Authentication
GOOGLE_EARTH_ENGINE_SERVICE_ACCOUNT=
GOOGLE_EARTH_ENGINE_PRIVATE_KEY=
ISIMIP_USERNAME=
ISIMIP_PASSWORD=
WORLDBANK_API_KEY=

# Development Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Data Storage Paths
DATA_ROOT=./data
RAW_DATA_PATH=./data/raw
PROCESSED_DATA_PATH=./data/processed
CACHE_PATH=./data/cache

# Analysis Configuration
DEFAULT_CRS=EPSG:102022  # Africa Albers Equal Area
TARGET_RESOLUTION=1000   # meters
CHUNK_SIZE=1000         # for memory management

# Web Service Configuration
API_PORT=8000
CORS_ORIGINS=*
RATE_LIMIT=100          # requests per minute

# Observable Configuration
OBSERVABLE_WORKSPACE=soil-health-ssa
OBSERVABLE_TOKEN=

# External Service URLs
SOILGRIDS_WCS_URL=https://maps.isric.org/mapserv
ISIMIP_DATA_URL=https://files.isimip.org
WOCAT_API_URL=https://qcat.wocat.net/api

# Analysis Parameters
SOIL_PH_THRESHOLD=5.5
SOC_THRESHOLD=1.0       # percent
EROSION_SEVERE_THRESHOLD=50  # tonnes/ha/year

# Notification Settings (optional)
SLACK_WEBHOOK_URL=
EMAIL_SMTP_SERVER=
EMAIL_FROM_ADDRESS=